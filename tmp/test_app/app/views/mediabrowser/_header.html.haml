.editing-mediabrowser-topbar
  .editing-mediabrowser-search
    %input.search-field{placeholder: "#{t('.search_placeholder')}", type: "text"}/
    %button.search-field-button Search

  %span.editing-button-view{data: {size: 'large'}}
    %i.editing-icon.editing-icon-th-large{title: "large tumbnails"}

  %span.editing-button-view{data: {size: 'big'}}
    %i.editing-icon.editing-icon-th{title: "big tumbnails"}

  %span.editing-button-view{data: {size: 'normal'}}
    %i.editing-icon.editing-icon-th-medium{title: "normal tumbnails"}

  %span.editing-button-view.active{data: {size: 'small'}}
    %i.editing-icon.editing-icon-th-small{title: "small tumbnails"}
