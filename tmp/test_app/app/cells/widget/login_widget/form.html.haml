.row-fluid
  .span12
    = form_for(:login_presenter, url: cms_path(@login_page), method: :post) do |form|
      %fieldset
        = hidden_field_tag(:return_to, cms_path(@page))
        = hidden_field_tag(:authenticity_token, form_authenticity_token)

        .control-group
          = form.label(:login)

          .controls
            = form.text_field(:login, required: true)

        .control-group
          = form.label(:password)

          .controls
            = form.password_field(:password, required: true)

        .control-group
          .controls
            = form.submit(class: 'btn')

    = render({ state: :reset_password })
